<div class = "container">

  <div id="profile">
    <div class="row mb-2 mx-auto" style="width:90%" >
      <div class="col-3">
        <%= attachment_image_tag @user, :icon, :fill, 100, 100, fallback: "no_image.png",size:"100x100",style:"border-radius:50%" %>

      </div>

      <div class="col-8 ml-auto">

        <div class="row m-0">
        <h5><%= @user.name %></h5>
        <div class="ml-auto"><% if user_signed_in? %>
          <% unless @user.id == current_user.id %>
            <% if current_user.following?(@user) %>
              <%= link_to "フォロー中", user_relationships_path(@user.id), method: :delete, class:"btn btn-secondary " %>
            <% else %>
              <%= link_to "フォローする", user_relationships_path(@user.id), method: :post, class:"btn btn-outline-secondary" %>
            <% end %>
          <% end %>
        <% end %>
        </div>
        </div>

        <p><%= @user.introduction %></p>

        <div class="row text-center pt-3" style="width:90%">
          <p class="col-4"><%= @user.posts.count %>
            <br/>投稿
          </p>
          <p class="col-4"><%= link_to user_followings_path(@user.id) do %><%= @user.followings.count %><%end%>
            <br/>フォロー
          </p>
          <p class="col-4"><%= link_to user_followers_path(@user.id) do %><%= @user.followers.count %><%end%>
            </br>フォロワー
          </p>
        </div>

        <% if user_signed_in? %>
          <% if @user.id == current_user.id %>
            <p class="text-right"><%= link_to ">>edit profile", edit_user_path(@user) %></p>
          <% end %>
        <% end %>

      </div>
    </div>
  </div>

  <div class="user-post">
    <%= render "posts/post_index", posts: @posts %>
  </div>

  <div class="my-5 ml-auto">
    <%= paginate(@posts) %>
  </div>


</div>
