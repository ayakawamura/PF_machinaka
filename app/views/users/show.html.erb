<div class="box" style="background: #edeae1;">
  <div class = "container">

<h2><%=@user.name%>さんの投稿</h2>

<div class="row">
  <div class="col-md-2">
    <%= attachment_image_tag @user, :icon, :fill, 100, 100, fallback: "no_image.png",size:"100x100" %><br/>

    <% if user_signed_in? %>
      <% unless @user.id == current_user.id %>
        <% if current_user.following?(@user) %>
          <%= link_to "フォローを外す", user_relationships_path(@user.id), method: :delete %>
        <% else %>
          <%= link_to "フォローする", user_relationships_path(@user.id), method: :post %>
        <% end %>
      <% end %>
    <% end %>

  </div>

  <div class="col-md-9 ml-auto">

    <table>
      <tbody>
        <tr>
          <th>name</th>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <th>詳細</th>
          <td><%= @user.introduction %></td>
        </tr>
        <tr>
          <th>followings.</th>
          <td><%= link_to user_followings_path(@user.id) do %><%= @user.followings.count %><%end%></td>
        </tr>
        <tr>
          <th>followers. </th>
          <td><%= link_to user_followers_path(@user.id) do %><%= @user.followers.count %><%end%></td>
        </tr>

      </tbody>
    </table>

    <% if user_signed_in? %>
      <% if @user.id == current_user.id %>
        <p class="text-right"><%= link_to ">>edit profile", edit_user_path(@user) %></p>
      <% end %>
    <% end %>

  </div>
</div>

<div class="row">
  <%= render "posts/post_index", posts: @posts %>
</div>

</div>
</div>
