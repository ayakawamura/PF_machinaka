<% unless @posts.present? %>
  <p>投稿がありません</p>
<% else %>

  <% posts.each do |post| %>
  
    <div class="col-md-4">
      <%=link_to post_path(post) do %>
        <% post.post_images.first(1).each do |image| %>
          <%= attachment_image_tag image, :image, class:"image-responsive", size: "300x200"%>
        <% end %>
      <% end %><br/>
      
      <%=link_to post_path(post) do %><%= post.body %><%end%>
      <%= post.tags.map(&:name).join(', ') %>
  
      <% if user_signed_in? %>
      <div id="post_<%= post.id %>">
        <%= render "favorites/iine", post: post %>
      </div>
      <%end%>
    </div>
  
  <% end %>
<% end %>