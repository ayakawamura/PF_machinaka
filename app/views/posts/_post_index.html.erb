<% unless posts.present? %>
  <p class="text-center font-weight-bold pt-5">Post not found</p>
<% else %>

<div class="row pt-3">

  <% posts.each do |post| %>

    <div class="col-md-4 mt-3">
      <%=link_to post_path(post) do %>
        <% post.post_images.first(1).each do |image| %>
          <%= attachment_image_tag image, :image, class:"img-fluid text-center"%>
        <% end %>
      <% end %>

      <div class="row">
        <p class="col-10"><i class="fas fa-tag"></i><%= post.tags.map(&:name).join(', ') %></p>

        <% if user_signed_in? %>
          <p  id="post_<%= post.id %>" class="col-2 text-right">
            <%= render "favorites/iine", post: post %>
          </p>
        <%end%>
      </div>

    </div>

  <% end %>
</div>

<% end %>