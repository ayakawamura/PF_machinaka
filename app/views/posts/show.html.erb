<div class="row">
  <% @post.post_images.each do |image| %>
    <%= attachment_image_tag image, :image, size:"600x400" %>
  <% end %>
</div>

<% if @post.favorited_by?(current_user) %>
  <p>
    <%= link_to post_favorites_path(@post), method: :delete do %>
      ♥<%= @post.favorites.count %> いいね
    <% end %>
  </p>
  <% else %>
  <p>
    <%= link_to post_favorites_path(@post), method: :post do %>
      ♡<%= @post.favorites.count %> いいね
    <% end %>
  </p>
<% end %>

<div class="row">
  <div class="col-md-5">
  
    <div class="row">
      <%= link_to user_path(@user) do %>
        <%= attachment_image_tag @user, :icon, :fill, 60, 60, fallback: "no_image.png",size:"60x60" %>
        <%= @user.name %>
      <% end %>
    </div>
  
    <div>
      <%= @post.body %>
    </div>
  
    <% if @user.id == current_user.id %>
      <div class="text-right">
        <%= link_to ">>edit  ", edit_post_path(@post) %><br/>
        <%= link_to ">>delete", post_path(@post), method: :delete %>
      </div>
    <% end %>
  
  </div>
  
  <div class="col-md-6 offset-1">
  </div>
</div>

<h5 class="mt-5">Comments</h5>
<div class="row mt-5">
  <div class="col-md-7">
    <% @post.post_comments.each do |comment| %>
      <div class="mt-3">
        <%= attachment_image_tag comment.user, :icon, :fill, 30, 30, fallback: "no_image.png",size:"30x30" %>
        <%= "#{comment.user.name}:" %>
        <%= comment.comment %>
        <%= link_to "delete.", post_post_comment_path(@post.id,comment.id), method: :delete %>
      </div>
    <% end %>
  </div>

  <div class="col-md-4 offset-1">
    <%= form_with(model:[@post, @post_comment], local: true) do |f| %>
      <%= f.text_area :comment, rows:'5',placeholder: "コメント入力" ,class:"form-control"%>
      <%= f.submit "送信する" %>
    <% end %>
  </div>
</div>
