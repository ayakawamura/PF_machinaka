<div class="row">
  <% @post.post_images.each do |image| %>
    <%= attachment_image_tag image, :image, size:"600x400" %>
  <% end %>
</div>

<div id="post_<%= @post.id %>">
  <%= render "favorites/iine", post: @post %>
</div>

<div class="row">
  <div class="col-md-5">
  
    <div class="row">
      <%= link_to user_path(@user) do %>
        <%= attachment_image_tag @user, :icon, :fill, 60, 60, fallback: "no_image.png",size:"60x60" %>
        <%= @user.name %>
      <% end %>
    </div>
  
    <div>
      <%= @post.body %>
    </div>
  
    <% if @user.id == current_user.id %>
      <div class="text-right">
        <%= link_to ">>edit  ", edit_post_path(@post) %><br/>
        <%= link_to ">>delete", post_path(@post), method: :delete %>
      </div>
    <% end %>
  
  </div>
  
  <div class="col-md-6 offset-1">
  </div>
</div>

<h5 class="mt-5">Comments</h5>
<div class="row">
  
  <div id="comment_area" class="col-md-7">
    <%= render "post_comments/comment", post_comments: @post_comments %>
  </div>

  <div class="col-md-4 offset-md-1">
    <%= form_with(model:[@post, @post_comment], remote: true) do |f| %>
      <%= f.text_area :comment, rows:'5',placeholder: "コメント入力" ,class:"form-control"%>
      <%= f.submit "送信する" %>
    <% end %>
  </div>
</div>
